    <body class="products">

        <!-- Ac치 sumamos la vista automatizada header -->
        <%- include ('./partials/header') %>
            <main class="container">
                <h3 class="h3-products">TIENDA ONLINE</h3>

                <div id="filters" class="row">
                    <div class="col">
                        <form class="py-5" action="products/category/">
                            <p>FILTRAR POR MARCA</p>
                            <div class="filter">
                                <select name="brand" class="form-select me-3">
                                    <option selected>Seleccionar marca</option>
                                    <!-- comienza el for-->
                                    <% for( i=0; i<products.length && productCategory.length; i++){ %>
                                        <option value="<%= products[i].id_category %>">
                                            <%= productCategory[i].name %>
                                        </option>

                                        <% }%>
                                            <!-- fin del for-->
                                </select>
                                <button type="submit" class="button">FILTRAR</button>

                            </div>
                        </form>
                    </div>
                    <div class="col">
                        <!-- ejemplo para automatizar-->
                        <form class="py-5" action="products/category/">
                            <p>FILTRAR POR CATEGORIA</p>
                            <div class="filter">
                                <select name="category" class="form-select me-3">
                                    <option selected>Seleccionar marca</option>
                                    <!-- comienza el for-->
                                    <% for( i=0; i<products.length && productCategory.length; i++){ %>
                                        <option value="<%= products[i].id_category %>">
                                            <%= productCategory[i].name %>
                                        </option>

                                        <% }%>
                                </select>
                                <button type="submit" class="button">FILTRAR</button>

                            </div>
                        </form>

                    </div>
                </div>

                <div class=" prod-box">
                    <% for(let i=0 ;i<products.length ; i++ ){ %>
                        <article class="caja-producto-home" id="cajaProductoHome2">
                            <div class="icono-info-container">
                                <div class="icono-info" id="iconoInfo2" title="M치s informaci칩n"><a
                                        href="/products/<%= products[i].id %>">+</a></div>
                            </div>
                            <div class="card-info-container" id="cardInfoContainer2" style="height: 334.8;">
                                <a href="/products/<%= products[i].id %>"><img
                                        style="max-height: 334.8px;min-height: 334.8px;"
                                        src="/img/productos/<%=products[i].image %> " alt="<%=products[i].name %>"
                                        class="product-img" id="productImg2" /></a>
                                <p class="display-none" id="description2">STOCK</p>
                            </div>
                            <p class="product-descrip" id="productDescrip2">
                                <%=products[i].name%>
                            </p>
                            <p id="precio2">$<%=products[i].price %>
                            </p>
                            <p class="stock">EN STOCK</p>
                        </article>
                        <% } %>
                </div>



            </main>









